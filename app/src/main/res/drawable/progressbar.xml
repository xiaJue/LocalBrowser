<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dip" />
            <gradient
                android:angle="0"
                android:centerColor="#55000000"
                android:centerY="0.75"
                android:endColor="@color/item_BgColor"
                android:startColor="@color/item_BgColor" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="0"
                    android:centerColor="#8060C842"
                    android:centerY="0.75"
                    android:endColor="#60C842"
                    android:startColor="#8060C842" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="0"
                    android:endColor="#8060C842"
                    android:startColor="#60C842" />
            </shape>
        </clip>
    </item>

</layer-list>