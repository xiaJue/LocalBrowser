<?xml version="1.0" encoding="utf-8"?>
<com.xiajue.browser.localwebbrowser.view.custom.AdaptDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_drawLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xiajue.browser.localwebbrowser.view.custom.ExtendedViewPager
            android:id="@+id/home_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.xiajue.browser.localwebbrowser.view.custom.ExtendedViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <LinearLayout
            android:id="@+id/home_bottom_root_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bottomBgColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_home_iv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/home"/>

            <ImageView
                android:id="@+id/home_web_iv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/web_out"/>

            <ImageView
                android:id="@+id/home_about_iv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/about_out"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/content_home_drawer_layout"/>

</com.xiajue.browser.localwebbrowser.view.custom.AdaptDrawerLayout>
